<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE nta PUBLIC '-//Uppaal Team//DTD Flat System 1.6//EN' 'http://www.it.uu.se/research/group/darts/uppaal/flat-1_6.dtd'>
<nta>
	<declaration>// Place global declarations here.
// Timing parameters (constants)

//VVI

const int LRL = 40;      // LRL - Lower rate limit, 60 bpm
const int URL = 180;       //W
const int VRP = 150;       // ms

const int HRI = LRL + 200;  // Hysteresis Rate Interval (HRI &gt; LRI)
int RI = LRL;          // current “active” lower rate interval

// Communication channels
chan sense;   // heart → pacemaker
chan pace;    // pacemaker → heart

//to allow for verification of queries
bool last_pace  = false;
bool last_sense = false;

// Bounds on heart’s intrinsic beat interval (IBI)
const int minIBI = 400;   // 
const int maxIBI = 1200;  // </declaration>
	<template>
		<name>Pacemaker</name>
		<declaration>//Models the pacemaker controller that monitors and paces the ventricle.
clock xv;</declaration>
		<location id="id0" x="-306" y="0">
			<name x="-391" y="-8">WaitVRP</name>
			<label kind="invariant" x="-374" y="-42">xv &lt;= VRP</label>
		</location>
		<location id="id1" x="68" y="0">
			<name x="93" y="-17">WaitRI</name>
			<label kind="invariant" x="59" y="-42">xv &lt;= LRL</label>
		</location>
		<init ref="id1"/>
		<transition id="id2">
			<source ref="id1"/>
			<target ref="id0"/>
			<label kind="guard" x="-161" y="-144">xv &gt;= LRL</label>
			<label kind="synchronisation" x="-136" y="-119">pace!</label>
			<label kind="assignment" x="-178" y="-93">xv = 0,
last_pace  = true,
last_sense = false</label>
			<nail x="-119" y="-25"/>
		</transition>
		<transition id="id3">
			<source ref="id1"/>
			<target ref="id0"/>
			<label kind="guard" x="-153" y="0">xv &gt;= URL</label>
			<label kind="synchronisation" x="-136" y="25">sense?</label>
			<label kind="assignment" x="-178" y="85">xv = 0,
last_pace = false,
last_sense = true</label>
			<nail x="-110" y="85"/>
		</transition>
		<transition id="id4">
			<source ref="id1"/>
			<target ref="id0"/>
			<label kind="synchronisation" x="-76" y="-204">pace!</label>
			<label kind="assignment" x="-85" y="-187">xv = 0</label>
			<nail x="-119" y="-195"/>
		</transition>
		<transition id="id5">
			<source ref="id0"/>
			<target ref="id1"/>
			<label kind="guard" x="-68" y="247">xv &gt;= VRP</label>
			<nail x="-102" y="272"/>
		</transition>
	</template>
	<template>
		<name x="5" y="5">Heart</name>
		<declaration>//Models the heart's ventricle behavior with random beating patterns.
clock xh; // heart clock: time since last intrinsic or paced beat

</declaration>
		<location id="id6" x="8" y="-280">
			<label kind="invariant" x="25" y="-289">xh &lt;= maxIBI</label>
		</location>
		<location id="id7" x="8" y="-280">
		</location>
		<init ref="id6"/>
		<transition id="id8">
			<source ref="id6"/>
			<target ref="id7"/>
		</transition>
		<transition id="id9">
			<source ref="id7"/>
			<target ref="id6"/>
			<label kind="synchronisation" x="-136" y="-246">pace?</label>
			<label kind="assignment" x="-229" y="-229">xh = 0,
last_pace  = true,
last_sense  = false</label>
			<label kind="comments" x="-127" y="-110">upon pace signal, update local clock</label>
			<nail x="-50" y="-161"/>
			<nail x="-50" y="-153"/>
			<nail x="77" y="-153"/>
		</transition>
		<transition id="id10">
			<source ref="id6"/>
			<target ref="id7"/>
		</transition>
		<transition id="id11">
			<source ref="id7"/>
			<target ref="id6"/>
		</transition>
		<transition id="id12">
			<source ref="id6"/>
			<target ref="id7"/>
			<label kind="guard" x="-306" y="-391">xh &gt;= minIBI &amp;&amp; xh &lt;= maxIBI</label>
			<label kind="synchronisation" x="-119" y="-366">sense!</label>
			<label kind="assignment" x="-212" y="-340">xh = 0,
last_pace  = false,
last_sense  = true</label>
			<label kind="comments" x="-110" y="-451">when timing condition is met</label>
			<nail x="-59" y="-400"/>
			<nail x="59" y="-400"/>
		</transition>
		<transition id="id13">
			<source ref="id7"/>
			<target ref="id6"/>
		</transition>
		<transition id="id14">
			<source ref="id6"/>
			<target ref="id7"/>
		</transition>
		<transition id="id15">
			<source ref="id6"/>
			<target ref="id7"/>
		</transition>
		<transition id="id16">
			<source ref="id7"/>
			<target ref="id6"/>
		</transition>
	</template>
	<system>// System declarations
system Pacemaker, Heart;
</system>
	<queries>
		<query>
			<formula>A[] not deadlock</formula>
			<comment/>
			<option key="--diagnostic" value="0"/>
			<result outcome="success" type="quality" timestamp="2025-11-14 08:50:28 -0500">
				<option key="--diagnostic" value="0"/>
			</result>
		</query>
		<query>
			<formula>A[] Pacemaker.WaitVRP imply Pacemaker.xv &lt;= VRP</formula>
			<comment/>
			<option key="--diagnostic" value="0"/>
			<result outcome="success" type="quality" timestamp="2025-11-14 08:50:28 -0500">
				<option key="--diagnostic" value="0"/>
			</result>
		</query>
		<query>
			<formula>A[] (Pacemaker.xv &gt; VRP) imply !Pacemaker.WaitVRP</formula>
			<comment/>
			<option key="--diagnostic" value="0"/>
			<result outcome="success" type="quality" timestamp="2025-11-14 08:50:28 -0500">
				<option key="--diagnostic" value="0"/>
			</result>
		</query>
		<query>
			<formula>A[] Pacemaker.xv &lt;= LRL</formula>
			<comment/>
			<option key="--diagnostic" value="0"/>
			<result outcome="failure" type="quality" timestamp="2025-11-14 09:21:26 -0500">
				<option key="--diagnostic" value="0"/>
			</result>
		</query>
		<query>
			<formula>A[] last_sense imply Pacemaker.xv &gt;= URL</formula>
			<comment/>
			<result outcome="success" type="quality" timestamp="2025-11-14 08:50:46 -0500">
			</result>
		</query>
		<query>
			<formula>A[] last_pace imply Pacemaker.xv &gt;= VRP</formula>
			<comment/>
			<result outcome="failure" type="quality" timestamp="2025-11-14 09:23:11 -0500">
			</result>
		</query>
		<query>
			<formula>A[] last_sense imply RI == HRI</formula>
			<comment/>
			<result outcome="success" type="quality" timestamp="2025-11-14 09:25:32 -0500">
			</result>
		</query>
		<query>
			<formula>A[] last_pace imply RI == LRL</formula>
			<comment/>
			<result outcome="success" type="quality" timestamp="2025-11-14 09:25:39 -0500">
			</result>
		</query>
		<query>
			<formula>A[] Heart.xh &lt;= maxIBI</formula>
			<comment/>
			<result outcome="success" type="quality" timestamp="2025-11-14 09:25:46 -0500">
			</result>
		</query>
		<query>
			<formula>A[] last_sense imply (Heart.xh &gt;= minIBI &amp;&amp; Heart.xh &lt;= maxIBI)</formula>
			<comment/>
			<result outcome="success" type="quality" timestamp="2025-11-14 09:25:53 -0500">
			</result>
		</query>
		<query>
			<formula>A&lt;&gt; last_sense</formula>
			<comment/>
			<result outcome="failure" type="quality" timestamp="2025-11-14 09:26:00 -0500">
			</result>
		</query>
	</queries>
</nta>
